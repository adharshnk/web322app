<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        {{#if items}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Date</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>${{this.price}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.postDate}}</td>
                            <td><img src="{{this.featureImage}}" alt="{{this.title}}" style="width:100px;"></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>
